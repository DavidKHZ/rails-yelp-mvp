<h1>New restaurant</h1>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :category,
    collection: %w[chinese italian japanese french belgian],
    prompt: "Select a category" %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "Add restaurant", class: "btn btn-primary" %>
<% end %>
